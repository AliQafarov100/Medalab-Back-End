@model List<Gallery>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a asp-action="Create" class="btn btn-primary">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Gallery gallery in Model)
                        {
                            <tr>
                                <td>
                                    @gallery.Id
                                </td>
                                <td>
                                    <img src="~/assets/Image/Galerys/@gallery.Image" alt="Alternate Text" style="width: 300px; height: 250px;"/>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div>
                                            <a asp-controller="Gallery" asp-action="Detail" asp-route-id="@gallery.Id" class="btn btn-primary">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Gallery" asp-action="Edit" asp-route-id="@gallery.Id" class="btn btn-success">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Gallery" asp-action="Delete" asp-route-id="@gallery.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

